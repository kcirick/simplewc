KEY = S+A+Return SPAWN foot
#--- Client actions
KEY = A+Tab CLIENT cycle
KEY = A+k CLINET kill
#--- Tags
KEY = A+1 TAG select
KEY = A+2 TAG select
KEY = A+3 TAG select
KEY = A+C+1 TAG toggle
KEY = A+C+2 TAG toggle
KEY = A+C+3 TAG toggle
KEY = A+S+1 CLIENT send_to_tag
KEY = A+S+2 CLIENT send_to_tag
KEY = A+S+3 CLIENT send_to_tag
#--- Move/Resize
